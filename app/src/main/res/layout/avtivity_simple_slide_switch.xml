<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.powyin.slide.widget.SlideSwitch
        android:id="@+id/test_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pow_fixed_item="4"
        app:pow_show_over_scroll="false">

        <TextView
            android:background="#6f00ff00"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="70dp"
            android:textSize="14sp"
            android:text="音乐"
            android:textColor="#ff656565"
            android:gravity="center" />

        <TextView
            android:background="#7700bbff"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="70dp"
            android:textSize="14sp"
            android:text="视频"
            android:textColor="#ff656565"
            android:gravity="center"/>

        <TextView
            android:background="#6c8c00ff"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="70dp"
            android:textSize="14sp"
            android:text="教育"
            android:textColor="#ff656565"
            android:gravity="center"/>

        <TextView
            android:background="#6c00ff51"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="70dp"
            android:textSize="14sp"
            android:text="娱乐"
            android:textColor="#ff656565"
            android:gravity="center" />


    </com.powyin.slide.widget.SlideSwitch>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/click_reset_adapter"
            android:text="替换Adapter"
            android:gravity="center"
            android:background="#6abcff"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            />
        <TextView
            android:id="@+id/click_add_item"
            android:text="增加一项数据"
            android:gravity="center"
            android:background="#f5ff6a"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            />
        <TextView
            android:id="@+id/click_remove_item"
            android:text="减少一项数据"
            android:gravity="center"
            android:background="#ff6a6f"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            />

    </LinearLayout>

</LinearLayout>
